<?xml version="1.0"?>
<phpunit bootstrap="./bootstrap.php"
        colors="true">
    <testsuites>
        <testsuite>
            <directory>.</directory>
        </testsuite>
    </testsuites>
    <logging>
      <log type="coverage-html" target="/var/www/html/report" charset="UTF-8"
           highlight="false" lowUpperBound="35" highLowerBound="70"/>
      <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>

      <log type="testdox-html" target="/var/www/html/report/testdox.html"/>
      <log type="testdox-text" target="/var/www/html/report/testdox.txt"/>
    </logging>
</phpunit>
